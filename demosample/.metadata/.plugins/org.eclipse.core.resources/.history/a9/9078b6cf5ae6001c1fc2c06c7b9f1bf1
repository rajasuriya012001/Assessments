 
public class Circle {
	double radius;
	static final double PI=3.14;
	static int count=0;
	public Circle() {
		radius=10;
		
		count++;
	}
	
	public Circle(double radius) {
		
		this.radius = radius;
	}

	public double getRadius() {
		return radius;
	}
	
	double findArea() {
		return PI*radius*radius;
	}
	public void print() {
		// TODO Auto-generated method stub
		System.out.println("radius "+radius+"\narea "+findArea());
	}

}
