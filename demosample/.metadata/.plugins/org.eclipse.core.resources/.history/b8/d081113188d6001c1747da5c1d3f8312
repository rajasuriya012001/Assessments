package com.training.IOStream;

import java.util.Scanner;

public class Nummee {
	//enum Day{SUNDAY,MONDAY,TUESDAY,WEDNESDAY,THURSDAY,FRIDAY,SATURDAY}
	public static void main(String[]args)
	{
		for (Nume d:Nume.values())
		{
			System.out.println(d);
		}
		System.out.println("value of "+Nume.valueOf("SUNDAY"));
		System.out.println("value of "+Nume.valueOf("WEDNESDAY").ordinal());
		Scanner s = new Scanner(System.in);
		System.out.println("enter the value of days from 0 to 6");
		int a=s.nextInt();
		Nume c = new Nume();
		c.Nume(a);				

		
			}
}
