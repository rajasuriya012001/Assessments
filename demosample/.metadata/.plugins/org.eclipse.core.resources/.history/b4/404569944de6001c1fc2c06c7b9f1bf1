        int tcount = 0;
        Scanner src = new Scanner(System.in);
        System.out.println();();
        int number = sc.nextInt();
        for (int i = 1; i <= number; i++) 
        {
            coin();
            if (getsideup().equals("heads")) 
            {
                hcount++;
            } 
            else 
            {
