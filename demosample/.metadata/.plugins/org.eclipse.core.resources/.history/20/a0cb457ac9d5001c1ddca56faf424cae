package com.training.third;

import java.io.Serializable;

public class Student1 extends Person  implements Serializable
{
static int roll;
 transient int marks;
String course,stdadd;
public Student1()
{
	roll=123;
	marks=1234;
	course="java";
	stdadd="gokul nagar,sozhanganallur";
	
}
public Student1(int roll,int marks,String course,String stdadd,int phn,String name)
{

	this.roll=roll;
	this.marks=marks;
	this.course=course;
	this.stdadd=stdadd;
}
public String display()
{
	
	return "ROLL NUMBER IS  :" + roll +"\n"+  "MARKS :"  + marks +"\n" +  "COURSE :"  + course+"\n" +  "STUDENT ADDRESS :" + stdadd + "\n";
}

}
